{
    "name": "sbwerewolf/eav-manager",
    "description": "Library for manage EAV structure and data",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nikolay Volkhin",
            "email": "ulfnew@gmail.com"
        }
    ],
    "require": {
        "php": ">=8",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "": [
                "src/"
            ]
        }
    },
    "scripts": {
        "test": "php ./vendor/phpunit/phpunit/phpunit --coverage-html build/coverage-report --debug"
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": true,
        "secure-http": false
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
