{
    "require": {
        "php": "~8",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "": [
                "src/"
            ]
        }
    },
    "scripts": {
        "test": "php ./vendor/phpunit/phpunit/phpunit --coverage-html build/coverage-report --debug"
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": true,
        "secure-http": false
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
